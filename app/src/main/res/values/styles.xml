<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OrangeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_32</item>
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <style name="logo">
        <item name="android:layout_width">@dimen/dp_216</item>
        <item name="android:layout_height">@dimen/dp_168</item>
        <item name="android:layout_margin">@dimen/dp_50</item>
    </style>

    <style name="titleFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_24</item>
        <item name="android:paddingStart">@dimen/dp_32</item>
        <item name="android:textSize">@dimen/dp_24</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="titleTopFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:layout_margin">@dimen/dp_12</item>
        <item name="android:textSize">@dimen/dp_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recyclerTopFragment">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/dp_250</item>
    <item name="android:layout_margin">@dimen/dp_12</item>
    </style>


</resources>